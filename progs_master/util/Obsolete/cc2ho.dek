#ifdef generic
C+---------------------------------------------------------------------+
C|                  T Y P E   &   D I M E N S I O N                    |
C+---------------------------------------------------------------------+
      character*1   c(*)
      integer       h(*), n, o
      integer       ich, iwd, jch, k, ko, lcs, nask(4), nwd
C+---------------------------------------------------------------------+
C|                  D A T A                                            |
C+---------------------------------------------------------------------+
      data          nask(1) / z'00FFFFFF' /,
     $              nask(2) / z'FF00FFFF' /,
     $              nask(3) / z'FFFF00FF' /,
     $              nask(4) / z'FFFFFF00' /
C+---------------------------------------------------------------------+
