C+---------------------------------------------------------------------+
C|                  L O G I C                                          |
C+---------------------------------------------------------------------+
      do 1000  k = 1,n
        ko      =  k + o
        iwd     =  (ko-1)/8 + 1
        pos     =  8 * ((ko-1) - 8*(iwd-1))
        ich     =  ICHAR(c(k))
        h(iwd)  =  INSERT (h(iwd), pos, 8, ich)
 1000 continue
#endif
