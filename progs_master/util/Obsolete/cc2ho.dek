#ifdef cdc
C+---------------------------------------------------------------------+
C|                  T Y P E   &   D I M E N S I O N                    |
C+---------------------------------------------------------------------+
      character*1   c(1)
      integer       h(*), i, k, ko, lh, m, n, o
C+---------------------------------------------------------------------+
C|                  L o G I C                                          |
C+---------------------------------------------------------------------+
      do 1000  k = 1,n
        ko      =  k + o
        i       =  SHIFT (ICHAR(c(k)), 54)
        lh      =  (ko - 1)/10
        m       =  6 * (11 - ko + 10*lh)
        h(lh+1) =  OR (h(lh+1).and.SHIFT(-MASK(6),m), SHIFT( i,m))
 1000 continue
#endif
#ifdef cray
C+---------------------------------------------------------------------+
C|                  T Y P E   &   D I M E N S I O N                    |
C+---------------------------------------------------------------------+
