      integer       m1, m2, n, o, k
      logical*1     h(*)
C+---------------------------------------------------------------------+
C|                  L o G I C                                          |
C+---------------------------------------------------------------------+
      m1 =    0
      do 1000  k = 1,(n+127)/128
        m2    =  MIN(m1+n-128*(k-1),m1+128)
        read (c(m1+1:m2),'(128A1)'),  (h(i+o),i=m1+1,m2)
        m1    =  m2
 1000 continue
