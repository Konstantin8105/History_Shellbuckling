C=DECK CC2HO  CC2HO  FORTRAN
      subroutine    CC2HO
     $                     (c, h, o, n)
C+---------------------------------------------------------------------+
C|    CC2HO copies a Fortran 77 CHARACTER string into a Hollerith      |
C|    string.  It differs from CC2H in that an offset argument         |
C|    for the Hollerith string is provided.                            |
C+---------------------------------------------------------------------+
C|    The calling sequence is:                                         |
C|                                                                     |
C|        CALL     CC2HO  (C, H, O, N)                                 |
C|                                                                     |
C|    Inputs -                                                         |
C|                                                                     |
C|      C          Source character string.                            |
C|      H          Target Hollerith string.                            |
C|      O          Offset of first byte in H to be copied              |
C|                 to C.  Only O>0 or O=0 is safe.                     |
C|      N          Number of characters to be moved.                   |
C|                 No operation if N le 0.                             |
C|                                                                     |
C|    Outputs -                                                        |
C|                                                                     |
C|      H          Updated Hollerith string.                           |
C+---------------------------------------------------------------------+
      implicit      none
#if defined(unix) || defined(linux)

#ifdef alpha
C+---------------------------------------------------------------------+
C|                  T Y P E   &   D I M E N S I O N                    |
C+---------------------------------------------------------------------+
      character*1   c(*)
      integer       h(*), n, o
      integer       ich, iwd, jch, k, ko, lcs, nask(4), nwd
C+---------------------------------------------------------------------+
C|                  D A T A                                            |
C+---------------------------------------------------------------------+
      data          nask(1) / z'FFFFFF00' /,
     $              nask(2) / z'FFFF00FF' /,
     $              nask(3) / z'FF00FFFF' /,
     $              nask(4) / z'00FFFFFF' /
C+---------------------------------------------------------------------+
C|                  L O G I C                                          |
C+---------------------------------------------------------------------+
      do 1000  k = 1,n
        ko     =   k + o
        iwd    =   (ko-1)/4 + 1
        nwd    =   ko - 4*(iwd-1)
        lcs    =   8 * (nwd - 1)
        ich    =   lshift (ichar(c(k)),lcs)
        jch    =   and (h(iwd), nask(nwd))
        h(iwd) =   or  (jch, ich)
 1000 continue
#endif
#ifdef ardent
C+---------------------------------------------------------------------+
C|                  T Y P E   &   D I M E N S I O N                    |
C+---------------------------------------------------------------------+
      character*1   c(*)
      integer       h(*), n, o
      integer       ich, iwd, jch, k, ko, lcs, nask(4), nwd
C+---------------------------------------------------------------------+
C|                  D A T A                                            |
C+---------------------------------------------------------------------+
      data          nask(1) / '00FFFFFF'X /,
     $              nask(2) / 'FF00FFFF'X /,
     $              nask(3) / 'FFFF00FF'X /,
     $              nask(4) / 'FFFFFF00'X /
C+---------------------------------------------------------------------+
C|                  L O G I C                                          |
C+---------------------------------------------------------------------+
      do 1000  k = 1,n
        ko      =  k + o
        iwd     =  (ko-1)/4 + 1
        lcs     =  8 * (4*iwd - ko)
        nwd     =  ko - 4*(iwd-1)
        ich     =  ISHFT (ICHAR (c(k)), lcs)
        jch     =  IAND (h(iwd), nask(nwd))
        h(iwd)  =  IOR  (jch, ich)
 1000 continue
#endif
#ifdef convex
C+---------------------------------------------------------------------+
C|                  T Y P E   &   D I M E N S I O N                    |
C+---------------------------------------------------------------------+
      character     c(*)
      integer       n, o, k, ko
      integer*1     h(*)
C+---------------------------------------------------------------------+
C|                  L o G I C                                          |
C+---------------------------------------------------------------------+
      do 1000  k = 1,n
        ko      =  k + o
        h(ko)   =  ICHAR(c(k))
 1000 continue
#endif
#ifdef cray
C+---------------------------------------------------------------------+
C|                  T Y P E   &   D I M E N S I O N                    |
C+---------------------------------------------------------------------+
      character*1   c(*)
      integer       h(*), ich, jch, k, ko, iwd, lcs, n, o
C+---------------------------------------------------------------------+
C|                  L o G I C                                          |
C+---------------------------------------------------------------------+
      do 1000  k = 1,n
        ko      =  k + o
        iwd     =  (ko - 1)/8 + 1
        lcs     =  8 * (8*iwd - (ko-1))
        ich     =  SHIFT (ICHAR(c(k)), 56)
        jch     =  AND (h(iwd),  SHIFT(MASK(72),lcs))
        h(iwd)  =  OR (jch, SHIFT(ich,lcs))
 1000 continue
#endif
