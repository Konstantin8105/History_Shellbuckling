#ifdef dps8
C+---------------------------------------------------------------------+
C|                  T Y P E   &   D I M E N S I O N                    |
C+---------------------------------------------------------------------+
      character*1   c(*)
      integer       h(*), ich, iwd, jch, k, ko, lcs, mask, n, o
C+---------------------------------------------------------------------+
C|                  D A T A                                            |
C+---------------------------------------------------------------------+
      data          mask / 12O000777777777 /
C+---------------------------------------------------------------------+
C|                  L o G I C                                          |
C+---------------------------------------------------------------------+
      do 1000  k = 1,n
        ko      =  k + o
        iwd     =  (ko - 1)/4 + 1
        lcs     =  9 * (4*iwd - (ko-1))
        ich     =  ISC (ICHAR(c(k)), 27)
        jch     =  IAND (h(iwd), ISC(mask,lcs))
        h(iwd)  =  IOR (jch, ISC(ich,lcs))
 1000 continue
#endif
#ifdef fps
