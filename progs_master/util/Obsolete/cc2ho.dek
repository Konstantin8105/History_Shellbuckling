C+---------------------------------------------------------------------+
C|                  L o G I C                                          |
C+---------------------------------------------------------------------+
      do 1000  k = 1,n
        ko      =  k + o
        iwd     =  (ko - 1)/8 + 1
        lcs     =  8 * (8*iwd - (ko-1))
        ich     =  SHIFT (ICHAR(c(k)), 56)
        jch     =  AND (h(iwd),  SHIFT(MASK(72),lcs))
        h(iwd)  =  OR (jch, SHIFT(ich,lcs))
 1000 continue
