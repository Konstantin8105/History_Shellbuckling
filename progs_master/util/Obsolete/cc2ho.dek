C+---------------------------------------------------------------------+
      character*1   c(*)
      integer       h(*), n, o, k
      integer       ich, iwd, jch, k, ko, lcs, nask(4), nwd
C+---------------------------------------------------------------------+
C|                  D A T A                                            |
C+---------------------------------------------------------------------+
      data          nask(1) / z'FFFFFF00' /,
     $              nask(2) / z'FFFF00FF' /,
     $              nask(3) / z'FF00FFFF' /,
     $              nask(4) / z'00FFFFFF' /
