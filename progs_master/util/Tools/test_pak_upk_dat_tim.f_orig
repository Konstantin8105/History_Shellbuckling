C$FORTRAN           TEST
      program       TEST
C+---------------------------------------------------------------------+
C|    Program to test utilities                                        |
C+---------------------------------------------------------------------+
C+---------------------------------------------------------------------+
C|                  C O M M O N    &    G L O B A L S                  |
C+---------------------------------------------------------------------+
      common / /    pool(10)
C+---------------------------------------------------------------------+
C|                  T Y P E   &   D I M E N S I O N                    |
C+---------------------------------------------------------------------+
      integer       holl(5),  holo(5)
C+---------------------------------------------------------------------+
C|                  E X T E R N A L S                                  |
C+---------------------------------------------------------------------+
      external      TSTPAK,   TSTUPK,   TSTDAT,   TSTLOC
C+---------------------------------------------------------------------+
C|                  L O G I C                                          |
C+---------------------------------------------------------------------+

      call     TSTPAK (holl, holo)

      call     TSTUPK (holl, holo)

      call     TSTDAT

      call     TSTLOC

      stop
      end
C$FORTRAN           TSTPAK
      subroutine    TSTPAK (holl, holo)
C+---------------------------------------------------------------------+
C|    Routine to test utility:   PAKCHA ( PAKCHAO )                    |
C+---------------------------------------------------------------------+
C+---------------------------------------------------------------------+
C|                  A R G U M E N T S                                  |
C+---------------------------------------------------------------------+
      integer       holl(*),  holo(*)
C+---------------------------------------------------------------------+
C|                  T Y P E   &   D I M E N S I O N                    |
C+---------------------------------------------------------------------+
      integer       i,        j,        k,        off

      character     string*12
C+---------------------------------------------------------------------+
C|                  D A T A                                            |
C+---------------------------------------------------------------------+
      data          string /'abCD0123$(/*'/
C+---------------------------------------------------------------------+
C|                  E X T E R N A L S                                  |
C+---------------------------------------------------------------------+
*     external      PAKCHA
*     external      PAKCHAO
C+---------------------------------------------------------------------+
C|                  L O G I C                                          |
C+---------------------------------------------------------------------+

C     test the function:  PAKCHA (cha, hol, num)
C     ------------------------------------------

      write (6,2000) string

      do 10 i = 1,5
        holl(i) =  0
   10 continue

      write (6,2001) (holl(j),j=1,3)

      call     PAKCHA (string, holl, 12)

      write (6,2002) (holl(j),j=1,3)

C     test the function:  PAKCHAO (hol, off, cha, num)
C     ------------------------------------------------

      off  =  2

      write (6,2003) off, string

      do 20 i = 1,5
        holo(i) =  0
   20 continue

      write (6,2004) (holo(j),j=1,4)

      call     PAKCHAO (string, holo, off, 12)

      write (6,2005) (holo(j),j=1,4)

      return
C+---------------------------------------------------------------------+
C|    Format Statements                                                |
C+---------------------------------------------------------------------+
 2000 format (//5X,'Testing function:  PAKCHA (c, h, n)',
     $        //5X,'        string "c" = ',A,
     $         /5X,'                     ------------')
 2001 format (  5X,' BEFORE:   holl(-) = ',3(z8,1X))
 2002 format (  5X,'  AFTER:   holl(-) = ',3(z8,1X),
     $         /5X,'                     ',3('-------- '))

 2003 format (//5X,'Testing function:  PAKCHAO (c, h, off, n)',
     $             '  with off = ',i2,
     $        //5X,'        string "c" = ',A,
     $         /5X,'                     ------------')
 2004 format (/,5X,' BEFORE:   holo(-) = ',4(z8,1X))
 2005 format (  5X,'  AFTER:   holo(-) = ',4(z8,1X),
     $         /5X,'                     ',4('-------- '))

      end
C$FORTRAN           TSTUPK
      subroutine    TSTUPK (holl, holo)
C+---------------------------------------------------------------------+
C|    Routine to test utility:   UPKCHA ( UPKCHAO )                    |
C+---------------------------------------------------------------------+
C+---------------------------------------------------------------------+
C|                  A R G U M E N T S                                  |
C+---------------------------------------------------------------------+
      integer       holl(*),  holo(*)
C+---------------------------------------------------------------------+
C|                  T Y P E   &   D I M E N S I O N                    |
C+---------------------------------------------------------------------+
      character     string*12
      character     strino*16
      integer       j,        k,        off
C+---------------------------------------------------------------------+
C|                  E X T E R N A L S                                  |
C+---------------------------------------------------------------------+
*     external      UPKCHA
*     external      UPKCHAO
C+---------------------------------------------------------------------+
C|                  L O G I C                                          |
C+---------------------------------------------------------------------+

C     test the function:  UPKCHA (hol, cha, num)
C     ------------------------------------------

      write (6,2000) (holl(j),j=1,3)

      string = ' '

      write (6,2001) string

      call     UPKCHA (holl, string, 12)

      write (6,2002) string

C     test the function:  UPKCHAO (hol, off, cha, num)
C     ------------------------------------------------

      off  =  2

      write (6,2003) off, (holo(j),j=1,4)

      string = ' '

      write (6,2001) string

      call     UPKCHAO (holo, off, string, 12)

      write (6,2002) string

      return
C+---------------------------------------------------------------------+
C|    Format Statements                                                |
C+---------------------------------------------------------------------+
 2000 format (//5X,'Testing function:  UPKCHA (h, c, n)',
     $        //5X,'           holl(-) = ',3(z8,1X),
     $         /5X,'                     ',3('-------- '))
 2001 format (  5X,' BEFORE:   string  = ',A)
 2002 format (  5X,'  AFTER:   string  = ',A,
     $         /5X,'                     ------------')
 2003 format (//5X,'Testing function:  UPKCHAO (h, c, off, n)',
     $             '  with off = ',I2,
     $        //5X,'           holo(-) = ',4(z8,1X),
     $         /5X,'                     ',4('-------- '))
      end
C$FORTRAN           TSTDAT
      subroutine    TSTDAT
C+---------------------------------------------------------------------+
C|    Routine to test utility:   DATIMI,   DATIMC                      |
C+---------------------------------------------------------------------+
C+---------------------------------------------------------------------+
C|                  T Y P E   &   D I M E N S I O N                    |
C+---------------------------------------------------------------------+
      integer       id(3),    it(3)
C+---------------------------------------------------------------------+
C|                  E X T E R N A L S                                  |
C+---------------------------------------------------------------------+
      external      DATTIM
C+---------------------------------------------------------------------+
C|                  L O G I C                                          |
C+---------------------------------------------------------------------+
      write (6,2000)

      call     DATTIM (id, it)

      write (6,2001) id(1), id(2), id(3),
     $               it(1), it(2), it(3)

      return
C+---------------------------------------------------------------------+
C|    Format Statements                                                |
C+---------------------------------------------------------------------+
 2000 format (//5X,'Testing function:  DATTIM')
 2001 format (/5X,'    DATE: dd mm yy = ',3(' ',I2.2),
     $        /5X,'    TIME: hh mm ss = ',3(' ',I2.2))
      end
C$FORTRAN           TSTLOC
      subroutine    TSTLOC
C+---------------------------------------------------------------------+
C|    Routine to test utility:   LOCBCW                                |
C+---------------------------------------------------------------------+
C+---------------------------------------------------------------------+
C|                  C O M M O N    &    G L O B A L S                  |
C+---------------------------------------------------------------------+
      common / /    pool(10)
C+---------------------------------------------------------------------+
C|                  T Y P E   &   D I M E N S I O N                    |
C+---------------------------------------------------------------------+
      integer       a1,       a4
C+---------------------------------------------------------------------+
C|                  E X T E R N A L S                                  |
C+---------------------------------------------------------------------+
      integer       LOCF
      external      LOCF
C+---------------------------------------------------------------------+
C|                  L O G I C                                          |
C+---------------------------------------------------------------------+
      write (6,2000)

      a1   =    LOCF (pool(1))
      a4   =    LOCF (pool(4))

      write (6,2001) 1, a1
      write (6,2001) 4, a4

      return
C+---------------------------------------------------------------------+
C|    Format Statements                                                |
C+---------------------------------------------------------------------+
 2000 format (//5X,'Testing function:  LOCBCW')
 2001 format (/5X,' relative location of "pool(',I1,')" = ',I8)
      end
