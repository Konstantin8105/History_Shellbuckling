#----------------------------------------------------------------------------
#
#   Makefile for BIO Test Programs
#
#----------------------------------------------------------------------------
#
#  macro definitions
# -------------------
#

include Makefile.in

#----------------------------------------------------------------------------

OBJECTS = tbio.o  bio_x86_64.o

#----------------------------------------------------------------------------
#
#  make rules
# ------------
#

all: $(OBJECTS)
	$(FORTRAN) $(LFLAGS) $(DEBUG) -o tbio tbio.o bio_x86_64.o

#----------------------------------------------------------------------------
# define the cleanup rules
# ------------------------

clean:
	$(RM) ${RMFLAGS} tbio
	$(RM) ${RMFLAGS} *.o

#----------------------------------------------------------------------------
# dependices
# ----------

tbio.o       : tbio.f
bio_x86_64.o : bio_x86_64.c